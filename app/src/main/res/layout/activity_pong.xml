<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PongActivity">

    <ImageButton
        android:id="@+id/btn_pause_pong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause"
        android:background="@color/black"
        android:layout_marginEnd="@dimen/btn_play_pause_margin_end"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/btn_play_pause_margin_top"
        android:scaleX="2"
        android:scaleY="2"/>


    <ImageButton
        android:id="@+id/btn_play_pong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:visibility="invisible"
        android:background="@color/black"
        android:layout_marginEnd="@dimen/btn_play_pause_margin_end"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/btn_play_pause_margin_top"
        android:scaleX="2"
        android:scaleY="2"/>

    <SurfaceView
        android:id="@+id/sv_pong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sv_margin_top"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        />

</FrameLayout>